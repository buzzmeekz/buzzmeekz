<div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-4 col-sm-offset-4">
        <h2>Caesar cipher</h2>
        <form action="/decrypt" method="post">
          <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
          <div class="form-group">
            <label for="message">What's your message?</label>
            <textarea id="message" name="message" placeholder="Lorem ipsum dolor sit amet" class="form-control" autofocus="true" rows="3"></textarea>
          </div>
          <div class="form-group">
            <label for="key">What's the key? (0-25)</label>
            <input type="number" min="0" max="25" id="key" name="key" class="form-control" value="3">
          </div>
          <input type="submit" value="Encrypt!" class="btn btn-primary">
        </form>
      </div>
    </div>
  </div>
</div>